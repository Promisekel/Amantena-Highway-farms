# Environment variables for Docker deployment
# Copy this file to .env and update with your values

# Database Configuration (use your Neon URL or local PostgreSQL)
DATABASE_URL=postgresql://amantena_user:amantena_password@database:5432/amantena_farms

# Session Security (generate a secure random string)
SESSION_SECRET=your-super-secret-session-key-min-32-characters-change-this

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Email Configuration (Gmail)
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-gmail-app-password

# Application URLs
FRONTEND_URL=http://localhost:3000
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_SOCKET_URL=http://localhost:5000

# Production URLs (update these for production deployment)
# FRONTEND_URL=https://your-domain.com
# REACT_APP_API_URL=https://api.your-domain.com/api
# REACT_APP_SOCKET_URL=https://api.your-domain.com

# Redis Configuration (optional)
REDIS_URL=redis://redis:6379

# Node Environment
NODE_ENV=production

# Security Settings
SECURE_COOKIES=true
TRUST_PROXY=true
